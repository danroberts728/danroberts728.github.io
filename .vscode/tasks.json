{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start http-server",
            "type": "shell",
            "command": "http-server -p 8080", // Adjust port as needed
            "isBackground": true, // Runs in the background
            "problemMatcher": [] // no problem matching
        },
        {
            "label": "stop server",
            "type": "shell",
            "command": "${command:workbench.action.tasks.terminate}",
            "args": [
                "terminateAll"
            ]
        }
    ]
}